@model IEnumerable<projet.Models.Cafe>

@{
    ViewData["Title"] = "Liste des Produits";
}

<h1 class="mt-4 mb-4 text-center text-primary">Liste des Produits</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nom</th>
            <th>Prix</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produit in Model)
        {
            <tr>
                <td>@produit.Nom</td>
                <td>@produit.Prix €</td>
            </tr>
        }
    </tbody>
</table>
